{
  "name": "ninja-catcher",
  "version": "1.0.0",
  "description": "A ComputerCraft terminal renderer on the web",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/SquidDev-CC/cloud-catcher.git"
  },
  "keywords": [
    "computercraft"
  ],
  "author": "SquidDev",
  "license": "MIT",
  "bin": {
    "cloud-catcher": "_bin/server.cjs"
  },
  "config": {
    "server": "ninja.its-em.ma"
  },
  "files": [
    "_bin",
    "_site"
  ],
  "scripts": {
    "build:setup": "node tools/setup.js",
    "build:rollup": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "build:lua": "lua tools/make.lua",
    "build": "npm run build:setup && npm run build:rollup && npm run build:lua",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "host": "node _bin/server.cjs"
  },
  "dependencies": {
    "bufferutil": "^4.0.1",
    "diff": "^5.0.0",
    "esm": "^3.2.25",
    "prom-client": "^14.0.0",
    "utf-8-validate": "^5.0.2",
    "ws": "^8.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-html": "^0.2.4",
    "@rollup/plugin-node-resolve": "^14.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@rollup/plugin-url": "^7.0.0",
    "@squid-dev/cc-web-term": "^1.0.0",
    "@types/diff": "^5.0.0",
    "@types/ws": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "magic-string": "^0.26.3",
    "monaco-editor": "^0.34.0",
    "postcss": "^8.4.16",
    "postcss-selector-parser": "^6.0.2",
    "preact": "^10.4.5",
    "requirejs": "^2.3.6",
    "rollup": "^2.50.4",
    "rollup-plugin-license": "^2.1.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.3.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  }
}
